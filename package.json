{
  "name": "react-nest-ts-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo with React frontend and NestJS backend using TypeScript and Docker",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "nest start --watch",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "build": "nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18"
  }
}
